// -------------
// VIEWS & WINDOW
// -------------

"Window": {
	backgroundColor: 'white'
}

"#interactiveWin": {
	top: 0,
	layout: 'vertical',
	height: '93%',
	backgroundColor: 'white'
}

"#showFamilyTrail": {
	height: '45%',
	width: Titanium.UI.FILL
}

"#clueSlideView": {
	height: 0,
	visible: false
}

"#lettersView":{
	layout: 'vertical',
	top: '10dp',
	height: 0,
	width: Titanium.UI.FILL,
	visible: false
}

"#hideView": {
	layout: 'vertical',
	height: Titanium.UI.SIZE
}

"#horizontalView":{
	layout: 'horizontal',
	width: Titanium.UI.FILL,
	height: '0dp',
	visible: false
}

// -------------
// LABELS
// -------------

"Label": {
	top: '5dp',
	left: '15dp',
	right: '15dp',
	font: {
		fontSize: '14dp',
		fontFamily: 'Raleway-Light'
	}
}

".label": {
	textAlign: Titanium.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontFamily: 'Raleway-Light',
		fontSize: '14dp'
	} ,
	right: '20dp',
	left: '20dp'
}

"#lblScroll": {
	color: 'gray',
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
	font: {
		fontFamily: 'Raleway-Light',
		fontSize: '12dp'
	},
	visible: false,
	height: 0,
	top: 0,
	bottom: '10dp'
}

"#lblInfoText": {
	top: '5dp',
	textAlign: Titanium.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontSize: '14dp'
	} ,
	right: '20dp',
	left: '20dp'
}

"#lblWelcome": {
	top: 0,
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontFamily: 'Raleway-Medium',
		fontSize: '18dp'
	},
	color: '#FCAF17',
	left: '19dp'
}

"#wordClue": {
	visible: false,
	height: 0,
	top: '5dp',
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontFamily: 'Raleway-Medium',
		fontSize: '16dp'
	},
	color: '#FCAF17',
	left: '19dp'
}

"#wordClueLbl": {
	visible: false,
	height: 0,
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	font: {
		fontFamily: 'Raleway-Light',
		fontSize: '14dp'
	},
	right: '20dp',
	left: '20dp'
}

"#txtLetter": {
	top: '10dp',
	left: '15%',
	right: '15%',
	tintColor: 'blue',
	borderWidth: '1dp',
	borderRadius: '5dp',
	width: Titanium.UI.FILL
}

"#lblCollectedLetters": {
	left: '20dp',
	right: '15dp',
	width: Titanium.UI.FILL,
	top: '5dp',
	font:
	{
		fontFamily: 'Raleway-Light',
		fontSize: '17dp'
	},
	color: '#FCAF17'
}

// -------------
// BUTTONS
// -------------

"#btnStartQuiz": {
	height: '40dp',
	width: Titanium.UI.FILL,
	top: '5dp',
	font: {
		fontSize: '16dp',
		fontFamily: 'Raleway-Medium'
	}
}

"#nextClue": {
	font: {
		fontFamily: 'Raleway-Light',
		fontSize: '13dp'
	},
	top: '10dp',
	height: Titanium.UI.SIZE,
	width: Titanium.UI.FILL
}

"#sendOneLetter": {
	font: {
		fontFamily: 'Raleway-Medium',
		fontSize: '16dp'
	}
}

"#sendWord": {
	visible: false,
	height: 0
}

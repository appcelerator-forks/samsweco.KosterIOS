<Alloy>
	<Collection src="hotspotModel"/>
	<Collection src="trailsModel"/>
	<Collection src="jsonFilesModel"/>
	<Collection src="hotspot_trailsModel"/>
	<Collection src="letterModel"/>
	<Model src="letterModel"/>
	<Collection src="infospotCoordinatesModel"/>
	
	<NavigationWindow id="interNav" platform="ios" navBarHidden="true">
		<Window id="interactiveWindow" title="Bokstavsjakten">
			<ScrollView id="interactiveWin">
				<View id="showFamilyTrail"/>
				<View id="clueSlideView">
					<View>
						<ScrollableView id="slides" scrollType="horizontal" showPagingControl="true"/>
					</View>
				</View>
				<Label id="lblScroll" text="Scrolla mellan ledtrådarna"></Label>
				<View id="lettersView">
					<!-- Skriv in rätt ord -->
					<Label id="wordClue" text="Skriv ordet du bildat av bokstäverna!"></Label>
					<Label id="wordClueLbl" text="Ledtråd: En svävande geléklump i havet."></Label>
					<TextField id="txtLetter"/>
					<Button id="sendWord" onClick="checkWord" title="Skicka ordet"></Button>

					<!-- Skriv in rätt bokstav -->
					<Button id="sendOneLetter" onClick="sendLetter" title="Skicka bokstav"></Button>
					<Label id="lblCollectedLetters"/>
					<Button id="nextClue" onClick="toNextClue" title="Klicka här om du inte hittar bokstaven."></Button>
				</View>
				<View id="hideView">
					<!-- Välkomstvy -->
					<Label id="lblWelcome" text="Välkommen till bokstavsjakten!"></Label>
					<Label id="lblInfoText" text="Vandra äventyrslingan och leta efter de 9 bokstäverna som finns gömda längs leden!"></Label>
					<Label class="label" text="Längs vägen kommer du få ledtrådar som hjälper dig finna bokstäverna."></Label>
					<Label class="label" text="När du hittat alla bokstäver kan du försöka lista ut det hemliga ordet."></Label>
					<Label class="label" text="Du kan se bokstävernas ungefärliga läge och nummer med hjälp av de ruda cirklarna. När du hittat en bokstav blir cirkeln för den bokstaven grön."></Label>
					<Label class="label" text="Om du inte hittar bokstaven kan du få hjälp i appen genom att klicka på en knapp som ger dig den korrekta bokstaven. "></Label>
					<Button id="btnStartQuiz" onClick="startInteractive" title="Starta bokstavsjakten!"></Button>
				</View>
			</ScrollView>
			<Widget src="menu" name="widget"/>
		</Window>
	</NavigationWindow>
</Alloy>
	<Model src="letterModel" />
	<Collection src="letterModel" />
	<Collection src="hotspot_trailsModel" />
	<Collection src="jsonFilesModel"></Collection>
	
	<Window id="hotspotWin" exitOnClose="true">
		<LeftNavButton>
			<Button id="btnCloseWindow" onClick="closeHotspot">
				Tillbaka
			</Button>
		</LeftNavButton>
		<View>
		<ScrollView id="hotspotView" class="headView" scrollType="vertical">
			<View id="slideView">
				<ScrollableView id="slideShowHotspotDetail" showPagingControl="true"/>

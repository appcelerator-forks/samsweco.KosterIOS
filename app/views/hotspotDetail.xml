<Alloy>
	<Collection src="mediaModel" />
	<Collection src="hotspotModel"></Collection>
	<Model src="letterModel" />
	<Collection src="letterModel" />
	<Collection src="hotspot_trailsModel" />
	<Collection src="jsonFilesModel"></Collection>
	
	<Window id="hotspotWin" onBlur="closeHotspot" class="container">
		<LeftNavButton>
			<Button id="btnCloseWindow" onClick="closeHotspot" image="/images/backarrow.png"></Button>
		</LeftNavButton>
		<View>
		<ScrollView id="hotspotView" class="container" scrollType="vertical">
			<View id="slideView">
				<ScrollableView id="slideShowHotspotDetail" showPagingControl="true"/>
			</View>
			<Label id="lblHotspotName"></Label>
			<Label id="lblHotspotInfoTxt" class="lblInfotxt"></Label>
			
			<View id="mapView">
				<Label id="lblHotspotMap" class="lblInfotxt" text="L('viewOnMap_lbl')"></Label>
				<View id="showHotspotMap"></View>
			</View>
		</ScrollView>
		<Widget src="menu" name="widget"></Widget>
		</View>
	</Window>
</Alloy>
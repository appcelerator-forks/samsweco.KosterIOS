<Alloy>
	<Collection src="info_urlModel"></Collection>
	<Collection src="letterModel" />

	<NavigationWindow id="navInfoDetail" platform="ios" navBarHidden="true">
	<Window id="infoDetail" backButtonTitle="Tillbaka" exitOnClose="true">
		<RightNavButton>
			<Button id="btnCloseInfoWindow" image="/images/closeBurger.png" onClick="closeInfoWindow" />
		</RightNavButton>
		<ScrollView class="container" scrollType="vertical" showVerticalScrollIndicator="true">
			<View id="slideView">
				<ImageView id="infoImg"></ImageView>
			</View>
			
			<Label id="lblInfoTitle1"></Label>
			<Label id="lblInfoText"></Label>
			<Label id="lblLink" text="Läs mer via länkarna nedan:"></Label>
			<View id="linkView">
				<TableView id="tableView" onClick="getLink">
					<TableViewRow class="row" onClick="getLink" />
				</TableView>
			</View>
		</ScrollView>
		<Widget src="menu" name="widget"></Widget>
	</Window>
	</NavigationWindow>
</Alloy>
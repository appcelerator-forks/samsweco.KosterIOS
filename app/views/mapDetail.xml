<Alloy>
	<Collection src="hotspotModel" />
	<Collection src="trailsModel" />
	<Collection src="jsonFilesModel" />
	<Collection src="hotspot_trailsModel" />
	<Collection src="letterModel" />
	<Model src="letterModel" />
	<Model src="foundLettersModel" />
	<Collection src="infospotCoordinatesModel" />
	<Window id="detailwin" backButtonTitle="Tillbaka" exitOnClose="true">
		<RightNavButton>
			<Button id="btnShowMenu" image="/images/hamburger.png" onClick="showMenu" />
		</RightNavButton>
		<View id="mapDetailView"></View>
		<View id="widgetView">
			<View id="settingsView">
				<View id="hotspotSwitchView" class="settingsHorizontalView">
					<ImageView image="/images/hotspotflag.png"></ImageView>
					<Label id="lblHotspot" text="Visa sevärdheter"></Label>
					<View class="switchClass">
						<Switch id="HotSwitch1" class="switch" value="false" titleOn="På" titleOff="Av" onChange="disHot"></Switch>
					</View>
				</View>
				<View id="gpsSwitchView" class="settingsHorizontalView">
					<ImageView image="/images/sound.png"></ImageView>
					<Label id="lblSetGPS" text="Påminnelse vid sevärdheter"></Label>
					<View class="switchClass">
						<Switch id="geoSwitch1" class="switch" value="false" titleOn="På" titleOff="Av"></Switch>
					</View>
				</View>
				<View id="myposSwitchView" class="settingsHorizontalView">
					<ImageView image="/images/locationarrow.png"></ImageView>
					<Label id="lblSetMypos" text="Visa min position"></Label>
					<View class="switchClass">
						<Switch id="posSwitch1" class="switch" value="false" titleOn="På" titleOff="Av"></Switch>
					</View>
				</View>
			</View>
		</View>
	</Window>
</Alloy>
<Alloy>
	<Collection src="mediaModel" />
	<Collection src="hotspotModel" />
	<Collection src="infospotCoordinatesModel" />
	<Collection src="letterModel" />
	<Model src="letterModel" />
	
	<NavigationWindow id="trailDetailNav" platform="ios" navBarHidden="true">
	<Window id="hikeDetailWin" exitOnClose="true">
		<View>
		<ScrollView id="headView">
			<View id="slideView">
				<ScrollableView id="slideShowTrails" scrollType="horizontal" showPagingControl="true" />
			</View>
			<View id="horizontalView">
				<View id="iconrow"></View>
			</View>
			<View class="lbls">
				<Label id="lblTrailName" class="lbltrailDetail">
				</Label>
				<Label id="lblTrailArea" class="lbltrailDetail">
				</Label>
				<Label id="lblTrailLength" class="lbltrailDetail">
				</Label>
				<Label id="lblTrailInfo" class="lbltrailDetail">
				</Label>
			</View>
			<Button id="btnShowOnMap" onClick="zoomMapTrail">
				Visa led på karta
			</Button> 
			<Button id="btnSendTo"></Button>
			<View id="btnHorizontalView">
				<Label id="lblBoat" text="Påminnelse vid sevärdheter"></Label>
				<View id="switchView">
					<Switch id="boatSwitch" class="switch" value="false" titleOn="På" titleOff="Av"></Switch>
				</View>
			</View>
			<Label id="lblLangsVagen" text="Det här kan du se längs vägen:"></Label>
			<View id="trail_hotspotView">
				<TableView id="hotspotTable" onClick="showHotspotDetail" />
			</View>
		</ScrollView>
		<Widget src="menu" name="widget"></Widget>
		</View>
	</Window>
	</NavigationWindow>
</Alloy>
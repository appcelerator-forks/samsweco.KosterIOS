<Alloy>
	<Collection src="hotspotModel" />
	<Collection src="letterModel"></Collection>
	<TabGroup id="tabs" backgroundColor="#fff" height="100%" tintColor="#FF9966">
		<Tab id="koster" class="tabbar" title="Hem" icon="/images/kosterStarMenu.png" >
			<Window id="koster" class="container" backgroundImage="/pics/front.png" navBarHidden="true">
				<View class="headView">
					<ImageView class="imgKoster" image="/pics/kosterhavet_logga.png"></ImageView>
					<Label id="lblFrontText">-HÃ¤r kan man se och uppleva Koster</Label>
					<Label id="lblInteractive" >Visa interactive</Label>
					<Widget src="interactive" name="widget"></Widget>
					
				</View>
			</Window>
		</Tab>
		<Tab id="hikeTab" class="tabbar" title="Vandra" icon="/images/hikeMenu.png">
			<Window id="hikeWin" title="Vandringsleder" onOpen="toTrails" />
		</Tab>
		<Tab id="maptab" class="tabbar" title="Karta" icon="/images/mapMenu.png">
			<Window id="mapWin" onOpen="toMap">
				<LeftNavButton>
					<Button id="btnGetPosition" image="/images/locationarrow.png" onClick="getPos" /> 
				</LeftNavButton>
				<RightNavButton>
					<Button id="btnShowMenu" image="/images/hamburger.png" onClick="showMenu" />
				</RightNavButton>
			</Window>
		</Tab>
		<Tab id="interactive" class="tabbar" title="Interactive" icon="/images/quizMenu.png">
			<Window id="interactiveWin" onOpen="toInteractive" navBarHidden="true" />
		</Tab>
		<Tab id="info" class="tabbar" title="Info" icon="/images/infoMenu.png">
			<Window id="infoWin" title="Information" onOpen="toInfo" />
		</Tab>
	</TabGroup>
</Alloy>